@model AlterarSenhaVM

@{
    ViewBag.Title = "Alterar Senha";
    Layout = "_LayoutLogin";
}  

<div class="card card-login">
    <div class="card-content">

      <form asp-action="AlterarSenha" method="post">
        
        <div class='caixa-titulo'>
            <span id='logo'> ðŸ”‘ </span>  
            <h1>Super OS</h1>
        </div>

        <div class="input-field">          
          <input asp-for='NovaSenha' class="validate" required type="password" maxlength="20" autofocus>                  
